<Window x:Class="GDMENUCardManager.LockedFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Files In Use" Height="400" Width="600"
        ResizeMode="CanResize" WindowStartupLocation="CenterOwner"
        MinHeight="250" MinWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10">
            <Run FontWeight="Bold">The following files or folders are currently in use and cannot be modified.</Run>
            <LineBreak/>
            <Run>Please close any programs that may be using these files (e.g., file explorer, media players) and click Retry.</Run>
        </TextBlock>

        <ListBox Grid.Row="1" x:Name="FileListBox" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2">
                        <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Error}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Retry" Width="80" Margin="0,0,10,0" Click="RetryButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
