<Window x:Class="GDMENUCardManager.AssignFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Assign Folder Path" Height="195" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="{Binding SelectionInfo}" Margin="0 0 0 10" FontWeight="SemiBold"/>

        <TextBlock Text="Folder Path:" Margin="0 0 0 5"/>
        <ComboBox x:Name="FolderInput"
                  ItemsSource="{Binding KnownFolders}"
                  Text="{Binding FolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  IsEditable="True"
                  MaxDropDownHeight="200"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="OK" Click="OkButton_Click" IsDefault="True" Width="80" Margin="0 0 10 0"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
