<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="330"
        x:Class="GDMENUCardManager.DiscImageOptionsWindow"
        Title="Disc Image Options" Height="330" Width="320"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Card Boxes - Vertically Stacked -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Stretch">

            <!-- VGA Patch Card -->
            <HeaderedContentControl Margin="0 0 0 10">
                <HeaderedContentControl.Header>
                    <TextBlock Text="VGA Patch" FontWeight="Bold"/>
                </HeaderedContentControl.Header>
                <StackPanel Margin="8">
                    <TextBlock Text="Force VGA flag after &quot;Exit to BIOS&quot; from openMenu" TextWrapping="Wrap"
                               Foreground="Gray" FontSize="11" Margin="0 0 0 10"/>
                    <CheckBox x:Name="ChkEnableVgaPatch" IsChecked="{Binding EnableVgaPatch}">
                        <TextBlock Text="Apply to newly added games"/>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding EnableVgaPatchExisting}"
                              IsEnabled="{Binding IsChecked, ElementName=ChkEnableVgaPatch}" Margin="0 5 0 0">
                        <TextBlock Text="Apply to existing games"/>
                    </CheckBox>
                </StackPanel>
            </HeaderedContentControl>

            <!-- Region-Free Patch Card -->
            <HeaderedContentControl Margin="0 0 0 10">
                <HeaderedContentControl.Header>
                    <TextBlock Text="Region-Free Patch" FontWeight="Bold"/>
                </HeaderedContentControl.Header>
                <StackPanel Margin="8">
                    <TextBlock Text="Boot out-of-region games after &quot;Exit to BIOS&quot; from openMenu" TextWrapping="Wrap"
                               Foreground="Gray" FontSize="11" Margin="0 0 0 10"/>
                    <CheckBox x:Name="ChkEnableRegionPatch" IsChecked="{Binding EnableRegionPatch}">
                        <TextBlock Text="Apply to newly added games"/>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding EnableRegionPatchExisting}"
                              IsEnabled="{Binding IsChecked, ElementName=ChkEnableRegionPatch}" Margin="0 5 0 0">
                        <TextBlock Text="Apply to existing games"/>
                    </CheckBox>
                </StackPanel>
            </HeaderedContentControl>
        </StackPanel>

        <!-- Save/Cancel Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5 0 0">
            <Button Content="Save" Width="80" Height="26" Margin="0 0 10 0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Height="26" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
